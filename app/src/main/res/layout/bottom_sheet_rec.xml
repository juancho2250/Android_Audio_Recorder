<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetRec"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/background_vertical"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <TextView
        android:id="@+id/tvRec"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/candara"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/btn3"
        android:paddingVertical="30dp"
        android:progressBackgroundTint="@color/white"
        android:thumbTint="@color/btn3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />



        <ImageButton
            android:id="@+id/ibPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_record"
            android:elevation="8dp"
            android:src="@drawable/ic_play_24"
            android:textColor="@color/white" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <ImageButton
            android:id="@+id/ibForward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_record"
            android:elevation="8dp"
            android:src="@drawable/ic_stop_24" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <ImageButton
            android:id="@+id/ibShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_ripple"
            android:elevation="8dp"
            android:clickable="true"
            android:src="@drawable/ic_share_24" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <ImageButton
            android:id="@+id/ibDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_ripple"
            android:elevation="8dp"
            android:src="@drawable/ic_delete_24" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

    </LinearLayout>

</LinearLayout>